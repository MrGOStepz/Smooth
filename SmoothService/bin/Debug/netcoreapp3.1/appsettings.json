{

  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "data source=localhost;Database=smooth;Integrated Security=SSPI;server=MrGOStepz"
  },
  "Serilog": {
    "Using": [],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithThreadId" ],
    "WriteTo": [
      {
        "Name": "RollingFile",
        "Args": {
          "pathFormat": "C:\\GitRepos\\Smooth\\Log\\log-{Date}.json",
          "formatter": "Serilog.Formatting.Json.JsonFormatter,Serilog",
          "rollingInterval": "RollingInterval.Day",
          "fileSizeLimitBytes": 2147483648,
          "retainedFileCountLimit": 30
        }
      }
    ]
  }

}
